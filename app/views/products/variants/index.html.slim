= render 'products/components/tabs'

.d-sm-flex.align-items-center.justify-content-between.mb-4
  .h3mb-0.text-gray-800
    h2 Variantes
  = link_to 'Nueva variant', new_product_variant_path(@product), class: 'd-none d-sm-inline-block btn btn-sm btn-primary shadow-sm'
div.content
  hr
  table.table
    thead.thead-light
      tr
        th scope="col" Optiones
        th scope="col" SKU
        th scope="col" Costo
        th scope="col" 
    tbody
      - @variants.each do |variant|
        tr
          td = variant.options_text
          td = variant.sku
          td = variant.cost_price
          td = link_to 'Editar', edit_product_variant_path(@product, variant)
