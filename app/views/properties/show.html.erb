<% content_for :page_title, @properties.name %>

<section class="section">
	<div class="container">
		<nav class="level">
		  <!-- Left side -->
		  <div class="level-left">
		    <p class="level-item">
		        <strong>Actions</strong>
		    </p>
		  </div>
		  <!-- Right side -->
		  <div class="level-right">
		  	<p class="level-item">
		    	<%= link_to "Edit", edit_property_path(@properties), class:"button" %>
		  	</p>
		  	<p class="level-item">
				<%= link_to "Delete", property_path(@properties), method: :delete, data: { confirm: "Are you sure?" }, class:"button is-danger" %>
				</p>
		  </div>
		</nav>
		<hr/>

		<div class="content">
			<%= @properties.name %>
			<br>
			<%= @properties.presentation %>
		</div>
	</div>
	<%= link_to 'Back', properties_path %>
</section>